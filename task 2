/*
Item 3
*/
#include<iostream>
#include<cmath>
#include<iomanip>
using namespace std;
int main(){
	
	float X;
	int Y;
	float V;
	float z = 2.5;
	 
	 cout<<"Please, enter the value of y: "; cin>>Y;
	 cout<<"Please, enter the value of x: "; cin>>X;
	 
		
	switch(X){
		case 1:
			if(Y > 1 && Y < 5){
				V = X*Y*Z;
			}
			else if(Y >= 5){
				V = X + (Y/Z);
			}
			break;
		case 2:
			if(Y<= 5){
				V = fabs((X - Y)/Z);
			}
			else if(Y > 5){
				V = X - sqrt(Y+Z);
			}
			break;
		default: 
			V = X+Y+Z;
	}
	
	//OUTPUT
	cout<<fixed<<setprecision(2);
	cout<<setw(10)<<setfill('_')<<V;
       
        _getch();
        Return 0;
}

