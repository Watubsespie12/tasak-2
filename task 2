#include<iostream>
using namespace std;
int main(){
	int Column, Rows;

	cout<<"Enter the columns: "; cin>> Column;	
	cout<<"Enter the rows: "; cin>> Rows;
	
	
	for(int i=1; i<=Rows; i++){
		//cout<<"*"<<endl;
		for(int j=1; j<=Column; j++){
			cout<<"*";
		}
		cout<<endl;
	_getch();
	return0;
}
