#include<iostream>
using namespace std;
int main(){
	 
	int Multiplier = 1;
	int num = 1;
	
	while(num <= 30){
		cout<<num;
		num = multiplier;
		
		if(Num >= 10){
			Multiplier = 2;
		}
		
		if(Num <= 30){
			cout<<",";
		}
	_getch();
	return 0;
}
