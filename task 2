#include<iostream>
using namespace std;
int main(){
	
	int Num1,Sum;
	
	cout<<"ENTER a number: "; cin>>Num1;
	
	while(Num1 > 0){
	sum = 0;
		
	for(int i=1; i<=Num1; i++){
		sum += i;
	}
	
	cout<<"Your sum from 1 to "<<Num1<<" is: "<<Sum<<endl;
	
	cout<<"ENTER a number: "; cin>>Num1;
	}
	
	cout<<"Thank you!";
	_getch();
	return 0;
}


