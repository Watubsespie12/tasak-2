#include<iostream>
using namespace std;
int main(){
	int Temp;
        int Num1 = 0;
	int Num2 = 1;
	
	
	
	cout<<Num1<<","<<Num2<<",";
	for(int i = 3; i<=22; i++){
		Num1 = Num2;
		Num2 = Temp;
		Temp = Num1 + Num2;
		cout<<Temp;
		
		if(i < 22){
			cout<<",";
		}
	_getch();
	return0;
}

