#include<iostream>
using namespace std;
int main(){
	
	int Num1, Num2, Num3, Largest;
	
	cout<<"Enter value of 1st Number: "; cin>>Num1;
	cout<<"Enter value of 2nd Number: "; cin>>Num2;
	cout<<"Enter value of 3rd Number: "; cin>>Num3;

	
	if(Num1 > Num2){
		Largest = num1;
	}
	else if(Num2 > Num1){
		Largest = Num2;
	}

	if(Largest > Num3){
		Largest = Largest;
	}
	else{
		Largest = Num3;
	}
	
	cout<<"THE LARGEST NUMBER AMONG THE 3 is : "<<Largest;
_getch();
Return 0;
	
}


